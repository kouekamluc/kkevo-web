# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# API Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api/v1
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Analytics (required for production)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Mapbox (for contact page)
NEXT_PUBLIC_MAPBOX_TOKEN=pk.eyJ1IjoieW91cnVzZXJuYW1lIiwiYSI6ImNrZXhhbXBsZSJ9.example

# Social Media
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourcompany
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourcompany
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourcompany

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=hello@yourdomain.com
NEXT_PUBLIC_CONTACT_PHONE=+1-555-0123
NEXT_PUBLIC_CONTACT_ADDRESS=123 Business Street, City, State 12345

# Performance & Security
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Feature Flags
NEXT_PUBLIC_ENABLE_BLOG_COMMENTS=true
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_ENABLE_NEWSLETTER_SIGNUP=true

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com
NEXT_PUBLIC_IMAGE_OPTIMIZATION_ENABLED=true

# SEO Configuration
NEXT_PUBLIC_SITE_NAME=Your Company Name
NEXT_PUBLIC_SITE_DESCRIPTION=Your company description for SEO
NEXT_PUBLIC_SITE_KEYWORDS=keyword1,keyword2,keyword3
